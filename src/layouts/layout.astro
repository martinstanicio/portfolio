---
import "@fontsource-variable/inter";

import { LanguageSwitcher } from "@/components/language-switcher";
import Menu from "@/components/menu.astro";
import Sidebar from "@/components/sidebar";
import { ThemeToggle } from "@/components/theme-toggle";
import { languages } from "@/i18n/ui";
import "@/styles/globals.css";

const title = "Mart√≠n Stanicio | Web Developer";
const description = "";
const keywords = ["portfolio", "web developer", "web designer", "bilingual"];
const url = Astro.url;

export type Props = { lang: (typeof languages)[number] };

const { lang } = Astro.props;
---

<html lang={lang}>
  <head>
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords.join(",")} />

    <meta property="og:type" content="website" />
    <meta property="og:url" content={url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />

    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="sitemap" href="/sitemap-index.xml" />
  </head>
  <body class="flex min-h-screen justify-between gap-12">
    <Sidebar lang={lang} />

    <main><slot /></main>

    <Menu lang={lang}>
      <LanguageSwitcher slot="language-switcher" lang={lang} client:load />
      <ThemeToggle slot="theme-toggle" lang={lang} client:load />
    </Menu>
  </body>
</html>

<script is:inline>
  const getThemePreference = () => {
    if (typeof localStorage !== "undefined" && localStorage.getItem("theme")) {
      return localStorage.getItem("theme");
    }

    return window.matchMedia("(prefers-color-scheme: dark)").matches
      ? "dark"
      : "light";
  };

  const isDark = getThemePreference() === "dark";
  document.documentElement.classList[isDark ? "add" : "remove"]("dark");

  if (typeof localStorage !== "undefined") {
    const observer = new MutationObserver(() => {
      const isDark = document.documentElement.classList.contains("dark");
      localStorage.setItem("theme", isDark ? "dark" : "light");
    });
    observer.observe(document.documentElement, {
      attributes: true,
      attributeFilter: ["class"],
    });
  }
</script>
